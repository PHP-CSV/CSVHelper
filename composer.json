{
    "name": "phpcsv/csv-helper",
    "description": "A PHP library for reading and writing CSV files with ease. CsvHelper supports custom delimiters, enclosures, and escape characters, providing flexible and efficient CSV data handling. It includes implementations using PHP's SplFileObject and other popular CSV libraries, ensuring compatibility with various CSV formats.",
    "license": "MIT",
    "authors": [
        {
            "name": "achraf aamri",
            "email": "achraf.aamri@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "friendsofphp/php-cs-fixer": "^3.75",
        "maglnet/composer-require-checker": "^4.7",
        "mockery/mockery": "^1.6",
        "phpbench/phpbench": "^1.2",
        "phpro/grumphp": "^2.13",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.0",
        "symfony/var-dumper": "^7.1.6"
    },
    "autoload": {
        "psr-4": {
            "Phpcsv\\CsvHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "stubs/fastcsv.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "phpro/grumphp": true,
            "maglnet/composer-require-checker": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "test:refacto": "rector --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit --colors=always",
        "test:bench": "vendor/bin/phpbench run --report=aggregate",
        "test": [
            "grumphp run",
            "@test:unit"
        ],
        "fix": [
            "@refacto",
            "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ],
        "bench": [
            "@test:bench"
        ],
        "post-install-cmd": [
            "grumphp git:init"
        ],
        "post-update-cmd": [
            "grumphp git:init"
        ]
    }
}
